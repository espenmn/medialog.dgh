<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>
   <metal:content-core fill-slot="content-core"
          tal:define="templateId template/getId">
    <div id="medlemmer_listing" tal:repeat="user view/group_users">
         
         <span tal:content="python: user.getProperty('fornavn')" />
         <span tal:content="python: user.getProperty('etternavn')" />
         <span tal:content="python: user.getProperty('tittel')" />
         <span tal:content="python  user.getGroups()" />
         plone.api.group.get_groups(username=user)
         
         <div tal:condition="context/group">
         	<span tal:content="python: user.getProperty('email')" />
         </div>
                  
    </div>
</metal:content-core>

</body>
</html>

